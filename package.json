{
  "name": "arquitectura-limpia-dominio",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "domain",
    "apps/*"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:domain": "jest --selectProjects domain",
    "test:backend": "jest --selectProjects backend", 
    "test:frontend": "jest --selectProjects frontend",
    "test:frontend:watch": "jest --selectProjects frontend --watch",
    "test:frontend:coverage": "jest --selectProjects frontend --coverage",
    "dev:domain": "yarn workspace domain test --watch",
    "dev:backend": "yarn workspace backend start:dev",
    "dev:frontend": "yarn workspace frontend dev",
    "build": "yarn workspace domain build && yarn workspace backend build && yarn workspace frontend build",
    "build:domain": "yarn workspace domain build",
    "build:backend": "yarn workspace backend build", 
    "build:frontend": "yarn workspace frontend build",
    "lint": "yarn workspace backend lint && yarn workspace frontend lint",
    "type-check": "yarn workspace backend type-check && yarn workspace frontend type-check",
    "storybook": "yarn workspace frontend storybook"
  },
  "devDependencies": {
    "@storybook/react-vite": "^8.6.14",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.5",
    "jest-util": "^30.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.6.14",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "uuid": "^13.0.0"
  }
}
